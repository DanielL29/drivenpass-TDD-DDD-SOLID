{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "types": ["jest"],
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
